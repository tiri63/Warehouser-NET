<Window x:Name="LoginWin" x:Class="Warehouser_NET.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouser_NET"
        mc:Ignorable="d"
        Title="登录" Height="240" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{DynamicResource BackgroundColorBrush}" FontFamily="Microsoft YaHei" Foreground="{DynamicResource FontColorBrush}" Closing="LoginWin_Closing">
    <Grid>
        <TextBox x:Name="UserName" Background="Transparent" Foreground="{DynamicResource FontColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Margin="54,39,0,0" Height="30"></TextBox>
        <PasswordBox x:Name="UserPwd" Background="Transparent" Foreground="{DynamicResource FontColorBrush}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="220" Margin="54,0,0,0" Height="30"></PasswordBox>
        <Button x:Name="LoginBtn" Content="登录" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,18,20" Width="64" Height="24" Click="LoginBtn_Click"></Button>
    </Grid>
</Window>
